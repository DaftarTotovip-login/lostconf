{
  "name": "lostconf",
  "version": "0.1.0",
  "description": "A meta-linter that detects stale references in configuration files",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "lostconf": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write src tests",
    "format:check": "prettier --check src tests",
    "typecheck": "tsc --noEmit",
    "selfcheck": "node dist/cli.js --exclude 'tests/fixtures/**'",
    "prepublishOnly": "npm run build && npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lostconf/lostconf.git"
  },
  "bugs": {
    "url": "https://github.com/lostconf/lostconf/issues"
  },
  "homepage": "https://github.com/lostconf/lostconf#readme",
  "keywords": [
    "linter",
    "config",
    "stale",
    "gitignore",
    "eslint",
    "prettier",
    "cleanup"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fast-glob": "^3.3.2",
    "micromatch": "^4.0.8",
    "smol-toml": "^1.3.0",
    "yaml": "^2.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.5.0",
    "eslint": "^9.9.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0",
    "vitest": "^2.0.5"
  }
}
